#install ! /usr/bin/env bash

# Dotfiles
alias dotfiles="/usr/bin/git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME"
alias d="dotfiles"

## Update
alias u="sudo apt update && sudo apt upgrade && sudo apt autoremove"

## Vim
alias v='vim' # Vim
alias pvim="vim -u NONE -N" # Vanilla Vim
alias v!='vim -u NONE'

case "$(uname -s)" in
       
       # macOS
       Darwin)

        # Editor
        ## Brew
        alias cask='brew cask' # Shorthand

        # alias v?='vim -d'
        # alias nvim='nvim' # NeoVim

        ## Emacs
        alias e='emacsclient --c' #Emacs

        # alias d="dotfiles"
        # alias ds="dotfiles status"
        # alias d+="dotfiles add"
        # alias d-="dotfiles remove"
        # alias d?="dotfiles commit"

        # Game
        alias _game="brew services stop yabai && brew services stop skhd"
        alias _normal="brew services start yabai && brew services start skhd"

        # REPLs
        alias snek='python3'

         ;;

        # Debian
        Linux)
        
        # Nautilus
        alias open='nautilus .'

        # Python 3
        alias python='/usr/bin/python3'
        alias pip='/usr/bin/pip3'

        ## Emacs
        alias e='
        export DISPLAY=:0.0
        export LIBGL_ALWAYS_INDIRECT=1
        setxkbmap -layout us
        setsid emacs
        '


         ;;

        CYGWIN*|MINGW32*|MSYS*|MINGW*)
         ;;

esac

